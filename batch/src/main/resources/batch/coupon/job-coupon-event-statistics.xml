<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:batch="http://www.springframework.org/schema/batch"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
      	http://www.springframework.org/schema/batch
      	http://www.springframework.org/schema/batch/spring-batch-2.2.xsd">


    <!--认证激励每日代金券生成-->
    <batch:job id="couponEventStatisticsJob">
        <batch:description>认证激励每日统计报表</batch:description>
        <!--用户-->
        <batch:validator>
            <bean class="org.springframework.batch.core.job.DefaultJobParametersValidator">
                <property name="requiredKeys">
                    <list>
                        <!--批次号-->
                        <value>taskId</value>
                        <value>batchNo</value>
                        <value>dateNo</value>
                        <value>date</value>
                    </list>
                </property>
                <property name="optionalKeys">
                    <list>

                    </list>
                </property>
            </bean>
        </batch:validator>

        <!--认证激励每日代金券生成-->
        <batch:step id="couponEventStatisticsStep">
            <batch:description>认证激励每日统计报表</batch:description>
            <batch:tasklet transaction-manager="jpaTransactionManager">
                <batch:transaction-attributes timeout="40"/>
                <batch:chunk writer="jpaItemWriter" commit-interval="10">
                    <batch:reader>
                        <bean class="org.springframework.batch.item.database.JpaPagingItemReader" scope="step">
                            <property name="pageSize" value="100"/>
                            <property name="entityManagerFactory" ref="entityManagerFactory"/>
                            <property name="queryString" value="from EventDetail where dateNo =:dateNo"/>
                            <property name="parameterValues">
                                <map>
                                    <entry key="dateNo" value-type="java.lang.String" value="#{jobParameters['date']}"/>
                                </map>
                            </property>
                            <property name="transacted" value="true"/>
                        </bean>
                    </batch:reader>
                    <batch:processor>
                        <bean class="com.ford.wechat.batch.item.processor.coupon.CouponEventStatisticsProcessor" scope="step">
                            <property name="dateNo" value="#{jobParameters['dateNo']}"/>
                            <property name="batchNo" value="#{jobParameters['batchNo']}"/>
                            <property name="date" value="#{jobParameters['date']}"/>
                        </bean>
                    </batch:processor>

                </batch:chunk>
            </batch:tasklet>
        </batch:step>


        <batch:listeners>

            <!--统一的jobTaskListener，所有job都需要添加-->
            <batch:listener>
                <bean class="com.ford.wechat.batch.listener.task.JobTaskListener">
                    <!--当前job的名称，便于日志打印区分-->
                    <property name="jobName" value="认证激励每日代金券生成"/>
                </bean>
            </batch:listener>
        </batch:listeners>
    </batch:job>

</beans>