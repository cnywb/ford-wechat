<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<description>配置信息装载</description>

	<context:property-placeholder ignore-resource-not-found="true" ignore-unresolvable="true" order="0"
                                  location="classpath*:/properties/baidu.properties,classpath*:/properties/hibernate.properties,classpath:properties/development/mail.properties,classpath*:/properties/wechat.properties"/>

</beans>
